                    <field name="fecha_pago" />
                    <field name="credit_note" />
                    <!-- attrs="{'invisible':[('credit_note','=',False)]}" -->
                    <field name="nota_credito" invisible= "credit_note == False"/>

                    <field name="causa" invisible= "credit_note == False"/>
                    <field name="CUNEPred" invisible= "credit_note == False"/>
                    <field name="NumeroPred" invisible= "credit_note == False"/>
                    <field name="FechaGenPred" invisible= "credit_note == False"/>
                </group>
            </xpath>
